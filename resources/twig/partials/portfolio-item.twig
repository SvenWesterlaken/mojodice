<div class="item-thumbnail" data-title="{{article.getTitle(lang)}}" data-created-at="{{article.created_at | date('Y-m-j')}}" data-updated-at="{{article.updated_at | date('Y-m-j')}}" data-categories="{{article.getCategories(lang)}}"><figcaption><a class="article-link" href="{{ path_for('article', {'lang': lang, 'slug': article.slug})}}">{{article.getTitle(lang)}}</a></figcaption><span class="date">- {{article.created_at | localizeddate('medium', 'none', lang, null, 'd MMM Y') }} -</span><img src="{{ article.getThumbnailImage() }}" alt="{{article.getTitle(lang)}}"/></div>