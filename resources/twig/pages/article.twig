{% extends "templates/basic.twig" %}
{% block title %} Mojodice | {{article.getTitle(lang)}} {% endblock %}
{% block content %}
{% include 'partials/nav.twig' with {'current_page': 'article', 'inverse': false, 'slug': article.slug} %}<header class="article-header"><h1>{{article.getTitle(lang)}}</h1></header><div class="article-page-content-container"><div class="article-container"><article class="article-content"><dl class="dates"><div class="postedat"><dt>{% if lang == 'nl' %}Gepost op:{% else %}Posted at:{% endif %}</dt><dd>{{article.created_at | localizeddate('medium', 'none', lang, null, 'd MMMM Y') }}</dd></div><div class="updatedat"><dt>{% if lang == 'nl' %}Bijgewerkt op:{% else %}Updated at:{% endif %}</dt><dd>{{article.updated_at | localizeddate('medium', 'none', lang, null, 'd MMMM Y') }}</dd></div></dl><div class="divider" id="postdate"></div><div class="article-links-container">{% for link in article.links %}
{% include 'partials/link-button.twig' with {'url': link.pivot.url, 'type': link.type} %}
{% endfor %}</div><div class="article-text">{{ article.getContent(lang) | markdown }}</div></article></div><div class="article-background"><div class="heroimage" style="background-image: url({{ article.getBackgroundImage() }});"></div></div></div>{% endblock %}